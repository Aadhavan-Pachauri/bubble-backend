# Bubble Backend Environment Variables

# ScrapingAnt API Key - Get from https://www.scrapingant.com/
SCRAPINGANT_API_KEY=your_scrapingant_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google API Key (optional, for advanced search features)
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration - allow your Bubble frontend
CORS_ORIGIN=http://localhost:3000,https://trybubble.vercel.app

# API Rate Limiting (requests per minute)
RATE_LIMIT_SEARCH_RPM=60
RATE_LIMIT_EMOTION_RPM=100

# Feature Flags
ENABLE_ADMIN_DASHBOARD=true
ENABLE_USAGE_TRACKING=true
